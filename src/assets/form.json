{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "x-display": "tabs",
    "x-props": {
        "grow": true
    },
    "allOf": [
        {
            "title": "Procedure metadata",
            "description": "Description of the procedure metadata",
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "title": "Procedure name",
                    "default": "[PROCEDURE NAME]",
                    "description": "Title of the procedure."
                },
                "description": {
                    "type": "string",
                    "x-display": "textarea",
                    "title": "Description",
                    "description": "Description of the procedure"
                },
                "isAdoptedBy": {
                    "type": "string",
                    "x-display": "textarea",
                    "title": "Adopted by",
                    "description": "Company adopting the procedure",
                    "examples": ["ACME"]
                },
                "versionNumber": {
                    "type": "string",
                    "title": "Version number"
                },
                "keyword": {
                    "type": "array",
                    "title": "Keywords",
                    "description": "Keywords of the procedure. Type and press Enter.",
                    "items": {
                        "type": "string"
                    }
                },
                "hasProcedureTarget": {
                    "title": "Target",
                    "description": "Target of the procedure (i.e., machine/workstation).",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "machineType": {
                                "type": "string",
                                "description": "The type of machine targeted by the procedure",
                                "title": "Machine type"
                            },
                            "title": {
                                "type": "string",
                                "description": "The name of the machine targeted by the procedure",
                                "title": "Machine name"
                            },
                            "atLocation": {
                                "type": "string",
                                "description": "The location of the machine targeted by the procedure",
                                "title": "Machine location"
                            }
                        }
                    }
                },
                "references" : {
                    "type": "array",
                    "title": "Associated resources",
                    "description": "Resources associated with the procedure.",
                    "x-options": {
                        "hideInArrayItem": true
                    },
                    "x-itemTitle": "title",
                    "items": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "type": "string",
                                "title": "Title",
                                "description": "Title of the resource"
                            },
                            "format": {
                                "type": "string",
                                "examples": ["PDF", "Excel", "Word", "PNG", "JPEG"],
                                "title": "Format",
                                "description": "Format of the resource (cf. http://publications.europa.eu/resource/dataset/file-type)"
                            },
                            "resource": {
                                "anyOf": [
                                {
                                    "title": "Remote Document",
                                    "properties": {
                                        "key": {
                                            "const": "Remote",
                                            "type": "string"
                                        },
                                        "url": {
                                            "title": "URL",
                                            "type": "string"
                                        }
                                    }
                                }
                                ],
                                "title": "Resource",
                                "type": "object"
                            }
                        }
                    }
                },
                "id": {
                    "title": "Identifier",
                    "type": "string",
                    "x-display": "hidden"
                },
                "created": {
                    "title": "Creation datetime",
                    "type": "string",
                    "x-display": "hidden"
                },
                "modified": {
                    "title": "Modification datetime",
                    "type": "string",
                    "x-display": "hidden"
                },
                "status": {
                    "title": "Status",
                    "type": "string",
                    "x-display": "hidden"
                },
                "type": {
                    "title": "Type",
                    "type": "string",
                    "x-display": "hidden"
                },
                "user": {
                    "title": "User",
                    "type": "string",
                    "x-display": "hidden"
                }
            }
        },
        {
            "title": "Procedure Definition",
            "description": "Description of the procedure steps",
            "type": "object",
            "properties": {
                "hasStep": {
                    "type": "array",
                    "title": "List of steps",
                    "description": "List of the steps of the procedure",
                    "x-itemTitle": "title",
                    "items": {
                        "$ref": "#/$defs/Step"
                    }
                }
            }
